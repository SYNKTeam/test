{
  "name": "livechat",
  "version": "2.0.0",
  "type": "module",
  "scripts": {
    "start": "node server.js",
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:vite\"",
    "dev:server": "PORT=3001 node server.js",
    "dev:vite": "vite --host",
    "prod": "node server.js",
    "build:staff": "cd src/staff && vite build",
    "build:widget": "cd src/widget && vite build",
    "build": "npm run build:staff && npm run build:widget"
  },
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "pocketbase": "^0.21.1",
    "ws": "^8.16.0",
    "eventsource": "^2.0.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.22.0",
    "@tabler/icons-react": "^3.24.0",
    "axios": "^1.6.7",
    "clsx": "^2.1.0"
  },
  "devDependencies": {
    "@vitejs/plugin-react": "^4.2.1",
    "vite": "^5.1.1",
    "concurrently": "^8.2.2",
    "tailwindcss": "^3.4.1",
    "autoprefixer": "^10.4.17",
    "postcss": "^8.4.35"
  }
}
